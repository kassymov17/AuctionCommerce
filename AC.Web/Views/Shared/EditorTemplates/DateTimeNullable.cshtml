@model DateTime?
@using System.Globalization

@{
    DateTimeFormatInfo ruDtfi = new CultureInfo("ru-Ru", false).DateTimeFormat;
}

<input id="@ViewData.TemplateInfo.GetFullHtmlFieldId(string.Empty)" name="@ViewData.TemplateInfo.GetFullHtmlFieldName(string.Empty)" value="@(Model > DateTime.MinValue || Model.HasValue ? Model.Value.ToString(ruDtfi) : null)" />
<script>
    $(document).ready(function () {
        $("#@ViewData.TemplateInfo.GetFullHtmlFieldId(string.Empty)").kendoDateTimePicker();
    });
</script>