@{
    Layout = "~/Views/Shared/_Root.cshtml";
}
@{
    int currentCategoryId = 0;
    if (Url.RequestContext.RouteData.Values["controller"].ToString().Equals("catalog", StringComparison.InvariantCultureIgnoreCase) &&
        Url.RequestContext.RouteData.Values["action"].ToString().Equals("category", StringComparison.InvariantCultureIgnoreCase))
    {
        currentCategoryId = Convert.ToInt32(Url.RequestContext.RouteData.Values["categoryId"].ToString());
    }

    int currentItemId = 0;
    if (Url.RequestContext.RouteData.Values["controller"].ToString().Equals("item", StringComparison.InvariantCultureIgnoreCase) &&
        Url.RequestContext.RouteData.Values["action"].ToString().Equals("itemdetails", StringComparison.InvariantCultureIgnoreCase))
    {
        currentItemId = Convert.ToInt32(Url.RequestContext.RouteData.Values["itemId"].ToString());
    }
}
@if (IsSectionDefined("Breadcrumb"))
{
    @section Breadcrumb{
        @RenderSection("Breadcrumb")
    }
}
<div class="side-2">
    @if (IsSectionDefined("left"))
    {
        @RenderSection("left")
    }
    else
    {
        @Html.Action("CategoryNavigation", "Catalog", new { currentCategoryId = currentCategoryId, currentItemId = currentItemId })
    }
</div>
<div class="center-2">
    @RenderBody()
</div>