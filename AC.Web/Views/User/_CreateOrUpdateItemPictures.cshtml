@model ItemModel
@using AC.Web.Models.Catalog

<div class="panel-group">
    @if (Model.Id > 0)
    {
        <div class="panel panel-default">
            <div class="panel-body">
                <div id="itempictures-grid"></div>
                <script>
                    $(document).ready(function() {
                        $('#itempictures-grid').kendoGrid({
                            dataSource: {
                                type: "json",
                                transport: {
                                    read: {
                                        url: "@Html.Raw(Url.Action("ItemPictureList", "Item", new { itemId = Model.Id }))",
                                        type: "POST",
                                        dataType: "json",
                                        data: addAntiForgeryToken
                                    },
                                    update: {
                                        url: "@Html.Raw(Url.Action("ItemPictureUpdate", "Item"))",
                                        type: "POST",
                                        dataType: "json",
                                        data: addAntiForgeryToken
                                    },
                                    destroy: {
                                        url: "@Html.Raw(Url.Action("ItemPictureDelete", "Item"))",
                                        type: "POST",
                                        dataType: "json",
                                        data: addAntiForgeryToken
                                    }
                                },
                                schema: {
                                    data: "Data",
                                    total: "Total",
                                    error: "Errors",
                                    model: {
                                        id: "Id",
                                        fields: {
                                            PictureUrl: { editable: false, type: "string" },
                                            DisplayOrder: { editable: true, type: "number" },
                                            OverrideAltAttribute: { editable: true, type: "string" },
                                            OverrideTitleAttribute: { editable: true, type: "string" }
                                        }
                                    }
                                },
                                requestEnd: function(e) {
                                    if (e.type == "update") {
                                        this.read();
                                    }
                                },
                                error: function(e) {
                                    display_kendoui_grid_error(e);
                                    this.cancelChanges();
                                },
                                serverPaging: true,
                                serverFiltering: true,
                                serverSorting: true
                            },
                            pageable: {
                                refresh: true,
                                numeric: false,
                                previousNext: false,
                                info: false
                            },
                            editable: {
                                confirmation: "Вы уверены, что хотите удалить?",
                                mode: "inline"
                            },
                            scrollable: false,
                            columns: [
                                {
                                    field: "PictureUrl",
                                    title: "@T("Admin.Catalog.Products.Pictures.Fields.Picture")",
                                    template: '<a href="#=PictureUrl#" target="_blank"><img alt="#=PictureId#" src="#=PictureUrl#" width="150" /></a>',
                                    width: 200
                                },
                                {
                                    field: "DisplayOrder",
                                    title: "@T("Admin.Catalog.Products.Pictures.Fields.DisplayOrder")",
                                    format: "{0:0}",
                                    width: 150
                                },
                                {
                                    field: "OverrideAltAttribute",
                                    title: "@T("Admin.Catalog.Products.Pictures.Fields.OverrideAltAttribute")",
                                    width: 200
                                },
                                {
                                    field: "OverrideTitleAttribute",
                                    title: "@T("Admin.Catalog.Products.Pictures.Fields.OverrideTitleAttribute")",
                                    width: 200
                                },
                                {
                                    command: [
                                        {
                                            name: "edit",
                                            text : {
                                                edit: "@T("Admin.Common.Edit")",
                                                update: "@T("Admin.Common.Update")",
                                                cancel: "@T("Admin.Common.Cancel")"
                                            }
                                        },
                                        {
                                            name: "destroy",
                                            text: "@T("Admin.Common.Delete")"
                                        }
                                    ],
                                    width: 200
                                }
                            ]
                        });
                    });
                </script>
            </div>
        </div>
        <div class="panel panel-default">
            <div class="panel-heading">
                Добавить изображение
            </div>
            <div class="panel-body">
                <script type="text/javascript">
                    $('#addItemPicture').click(function() {
                        var pictureId = $("#@Html.FieldIdFor(model => model.AddPictureModel.PictureId)").val();
                        var overrideAltAttribute = $("#@Html.FieldIdFor(model => model.AddPictureModel.OverrideAltAttribute)").val();
                        var overrideTitleAttribute = $("#@Html.FieldIdFor(model => model.AddPictureModel.OverrideTitleAttribute)").val();
                        var displayOrder = $("#@Html.FieldIdFor(model => model.AddPictureModel.DisplayOrder)").val();

                        if (pictureId == 0) {
                            alert('Загрузите изображение');
                            return;
                        }

                        $('#addItemPicture').attr('disabled', true);

                        var postData = {
                            pictureId: pictureId,
                            displayOrder: displayOrder,
                            overrideAltAttribute: overrideAltAttribute,
                            overrideTitleAttribute: overrideTitleAttribute,
                            itemId: @Model.Id
                        };
                        addAntiForgeryToken(postData);

                        $.ajax({
                            cache: false,
                            type: "POST",
                            url: "@(Url.Action("ItemPictureAdd", "Item"))",
                            data: postData,
                            success: function(data) {
                                var grid = $("#itempictures-grid");
                                grid.data('kendoGrid').dataSource.read();
                                $('#addItemPicture').attr('disabled', false)
                            },
                            error: function(xhr, ajaxOptions, thrownError) {
                                alert('Не удалось загрузить изображение.');
                                $('#addItemPicture').attr('disabled', false);
                            }
                    });
                    });
                </script>
                <div class="form-group">
                    <div class="col-md-3">
                        @Html.ACLabelFor(model => model.AddPictureModel.PictureId)
                    </div>
                    <div class="col-md-9">
                        @Html.ACEditorFor(model => model.AddPictureModel.PictureId)
                        @Html.ValidationMessageFor(model => model.AddPictureModel.PictureId)
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        @Html.ACLabelFor(model => model.AddPictureModel.OverrideAltAttribute)
                    </div>
                    <div class="col-md-9">
                        @Html.ACEditorFor(model => model.AddPictureModel.OverrideAltAttribute)
                        @Html.ValidationMessageFor(model => model.AddPictureModel.OverrideAltAttribute)
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        @Html.ACLabelFor(model => model.AddPictureModel.OverrideTitleAttribute)
                    </div>
                    <div class="col-md-9">
                        @Html.ACEditorFor(model => model.AddPictureModel.OverrideTitleAttribute)
                        @Html.ValidationMessageFor(model => model.AddPictureModel.OverrideTitleAttribute)
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        @Html.ACLabelFor(model => model.AddPictureModel.DisplayOrder)
                    </div>
                    <div class="col-md-9">
                        @Html.ACEditorFor(model => model.AddPictureModel.DisplayOrder)
                        @Html.ValidationMessageFor(model => model.AddPictureModel.DisplayOrder)
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-9 col-md-offset-3">
                        <button type="button" id="addItemPicture" class="btn btn-primary">@T("Admin.Catalog.Products.Pictures.AddButton")</button>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="panel panel-default">
            <div class="panel-body">
                Сохраните изменения перед тем как добавить изображения
            </div>
        </div>
    }
</div>